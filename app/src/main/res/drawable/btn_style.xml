<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_pressed="false">
        <shape  android:shape="rectangle" android:layout_height="fill_parent" android:layout_width="wrap_content">
            <gradient android:startColor="#f5f4f4" android:endColor="#f5f4f4" />
            <corners android:radius="0dp" />
            <stroke android:width="1px" android:color="#2fa49f" />
            <padding android:left="10dp" android:right="10dp" android:top="5dp" android:bottom="5dp"/>
            <size android:height="40dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape  android:shape="rectangle" android:layout_height="fill_parent" android:layout_width="wrap_content">
            <gradient android:startColor="#fff" android:endColor="#fff" />
            <corners android:radius="0dp" />
            <stroke android:width="1px" android:color="#2fa49f" />
            <padding android:left="10dp" android:right="10dp" android:top="5dp" android:bottom="5dp"/>
        </shape>
    </item>

</selector>