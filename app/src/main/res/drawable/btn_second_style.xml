<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_pressed="false">
        <shape  android:shape="rectangle" android:layout_height="fill_parent" android:layout_width="wrap_content">
            <gradient android:startColor="#2fa49f" android:endColor="#2fa49f" />
            <corners android:radius="0dp" />
            <stroke android:width="3px" android:color="#fff" />
            <padding android:left="10dp" android:right="10dp" android:top="5dp" android:bottom="5dp"/>
            <size android:height="40dp"/>
        </shape>
        <color android:color="#fff" />
    </item>

    <item android:state_pressed="true">
        <shape  android:shape="rectangle" android:layout_height="fill_parent" android:layout_width="wrap_content">
            <stroke android:width="2px" android:color="#fff" />
            <gradient android:startColor="#3eada8" android:endColor="#3eada8" />
        </shape>
    </item>
</selector>